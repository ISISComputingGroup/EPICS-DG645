{
    field(DESC, "Error queue timestamp calc")
    field(SCAN, "Passive")
    field(INAA, "$(P)$(R)ERQLAST")
    field(INBB, "$(P)$(R)ERQSTMP")
    field(CALC, "BB+' '+AA")
    field(FLNK, "$(P)$(R)ERQ0")
